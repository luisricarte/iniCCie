generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                  @id @default(uuid())
  name                  String?
  email                 String?
  password              String?
  type                  String?
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  AcademicOpportunities AcademicOpportunities[]
  Candidate             Candidate[]
}

model AcademicOpportunities {
  id           String      @id @default(uuid())
  titulo       String
  descricao    String
  professor_id User        @relation(fields: [professorId], references: [id])
  professorId  String
  status       String
  type         String
  Candidate    Candidate[]
}

model Candidate {
  id               String                @id @default(uuid())
  opportunities_id AcademicOpportunities? @relation(fields: [opportunitiesId], references: [id])
  opportunitiesId  String
  user             User                  @relation(fields: [userId], references: [id])
  userId           String
  data_candidatura DateTime
}

